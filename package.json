{
  "name": "project-vimlet-meta",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "precommit": "run-s build format test",
    "test": "node_modules/.bin/intern-client config=tests/intern",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "node_modules/.bin/eslint src/**/*.js --fix",
    "format:prettier": "node_modules/.bin/prettier src/**/*.js --write",
    "build": "node scripts/build.js",
    "badges": "node scripts/badges.js"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "prettier": "^1.7.3",
    "eslint": "^4.8.0",
    "intern": "^3.4.6",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.1",
    "gh-badges": "^1.3.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "rules": {
      "quotes": [2, "double"],
      "no-undef": "off",
      "no-useless-escape": "off",
      "no-console": "off"
    }
  },
  "eslintIgnore": [
    "**/node_modules/**"
  ]
}