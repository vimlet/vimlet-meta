{
  "name": "project-vimlet-meta",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "precommit": "npm run build & npm run format & npm run test",
    "test": "node_modules/.bin/intern-client config=tests/intern",
    "format": "npm run format:prettier & npm run format:eslint",
    "format:eslint": "node_modules/.bin/eslint src/**/*.js --fix",
    "format:prettier": "node_modules/.bin/prettier src/**/*.js --write",
    "build": "node build/build.js"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "prettier": "^1.7.3",
    "eslint": "^4.8.0",
    "intern": "^3.4.6",
    "husky": "^0.14.3"
  },
  "eslintConfig": {
    "rules": {
      "quotes": [
        2,
        "double"
      ],
      "keyword-spacing": [
        2,
        {
          "before": true,
          "after": true
        }
      ],
      "padding-line-between-statements": [
        2,
        {
          "blankLine": "always",
          "prev": "if",
          "next": "*"
        }
      ]
    }
  },
  "eslintIgnore": [
    "**/node_modules/**"
  ]
}