{
  "name": "project-vimlet-meta",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format": "npm run format:prettier & npm run format:eslint",
    "format:eslint": "node_modules/.bin/eslint src/**/*.js --fix",
    "format:prettier": "node_modules/.bin/prettier **/*.js --write",
    "build": "node build/build.js"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.3",
    "eslint": "^4.8.0"
  },
  "pre-commit": [
    "format",
    "build"
  ],
  "eslintConfig": {
    "rules": {
      "quotes": [
        2,
        "double"
      ],
      "keyword-spacing": [
        2,
        {
          "before": true,
          "after": true
        }
      ],
      "padding-line-between-statements": [
        2,
        {
          "blankLine": "always",
          "prev": "if",
          "next": "*"
        }
      ]
    }
  },
  "eslintIgnore": [
    "**/node_modules/**"
  ]
}